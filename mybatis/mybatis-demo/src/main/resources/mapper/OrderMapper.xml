<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xschen.spring.mybatis.demo.domain.Order">
    <resultMap id="orderMap" type="Order">
        <id property="id" column="id"/>

        <result property="createTime" column="create_time" />
        <association property="customer" javaType="Customer" >
            <result property="id" column="customer_id" />
        </association>
        <association property="deliveryAddress" javaType="Address">
            <result property="id" column="address_id" />
        </association>
        <!-- 这里并没有映射orderItems集合-->
    </resultMap>

    <select id="find" resultMap="orderMap">
        SELECT * FROM t_order WHERE id = #{id:Long}
    </select>

    <select id="findByCustomerId" resultMap="orderMap">
        SELECT * FROM t_order WHERE id = #{id:Long}
        AND create_time <![CDATA[ >= ]]> #{startTime}
        AND create_time <![CDATA[ <= ]]> #{endTime}
    </select>

    <insert id="save" keyProperty="id" useGeneratedKeys="true" >
        INSERT INTO t_order (address_id, customer_id, create_time)
        VALUES (#{deliverAddress.id}, #{customer.id}, #{createTime})
    </insert>
</mapper>